<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.sist.b.comment.CommentRepository">
  	
	<insert id="setComment" parameterType="CommentVO" useGeneratedKeys="true" keyProperty="commentNum">
		INSERT INTO comment
		VALUES( #{commentNum}, #{postNum}, #{userNum}, #{writer}, #{commentContents}, #{commentNum}, 0,0,now())
	
	</insert>
	
	<resultMap type="CommentVO" id="selectResult">
		<id column="commentNum" property="commentNum"/>
		<result column="postNum" property="postNum"/>
		<result column="userNum" property="userNum"/>
		<result column="writer" property="writer"/>
		<result column="commentContents" property="commentContents"/>
		<result column="ref" property="ref"/>
		<result column="step" property="step"/>
		<result column="depth" property="depth"/>
		<result column="regDate" property="regDate"/>
		
		<association property="userVO" javaType="UserVO">
			<result column="nickname" property="nickname"/>
			<result column="fileName" property="fileName"/>
			<result column="username" property="username"/>
		</association>

	</resultMap>
	
	<select id="getCommentCount" parameterType="CommentVO" resultType="Long">
		SELECT COUNT(commentNum) FROM comment
		where postNum = #{postNum}
	</select>
	
	<delete id="setCommentDel" parameterType="CommentVO">
		DELETE FROM comment WHERE commentNum = #{commentNum}
	</delete>
	
	<insert id="setReplyInsert" useGeneratedKeys="true" keyProperty="commentNum" parameterType="CommentVO">
		INSERT INTO comment
			VALUES(null, #{postNum}, #{userNum}, #{writer}, #{commentContents}, 
  	(select R.ref from(select * from comment where commentNum=#{commentNum})R),
  	(select S.step+1 from(select * from comment where commentNum=#{commentNum})S),
  	(select D.depth+1 from(select * from comment where commentNum=#{commentNum})D),
  	now())
	
	</insert>
	
<update id="setReplyUpdate" parameterType="CommentVO">
  	UPDATE comment SET step=step+1
  	 WHERE ref=(select ref from comment where commentNum=#{commentNum}) 
  	 and step > (select step from comment where commentNum=#{commentNum})
  	
  </update>
  
  <update id="setRefUpdate" parameterType="CommentVO">
  	UPDATE comment SET ref=#{commentNum} WHERE commentNum=#{commentNum}
  </update>
	
 	
 	
  </mapper>