<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.sist.b.ad.AdRepository">
	<select id="getList" resultType="AdVO">
		select * from ad
	</select>
	<select id="getOne" resultType="AdVO">
		select * from ad where adNum = #{adNum}
	</select>
	<insert id="setInsert" parameterType="AdVO" useGeneratedKeys="true" keyProperty="adNum">
		insert into ad (adNum, adContents, adDate, adFileName, adURL)
		values (#{adNum}, #{adContents}, now(), #{adFileName}, #{adURL})
	</insert>
	<delete id="setDelete" parameterType="AdVO">
		delete from ad where adNum = #{adNum}
	</delete>
</mapper>